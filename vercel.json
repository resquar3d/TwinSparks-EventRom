{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "rewrites": [
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "functions": {
    "app/api/**/*.js": {
      "runtime": "vercel/node@20.x"
    }
  },
  "env": {
    "NODE_ENV": "production"
  },
  "github": {
    "silent": true
  }
}